<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/custom_listview">
    <ImageView
        android:id="@+id/ability_icon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/ability_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ability_icon"
        android:layout_alignTop="@+id/ability_icon"
        android:layout_marginLeft="5dp"
        android:text="Name"
        android:textColor="@color/colorText"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/ability_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ability_name"
        android:layout_alignLeft="@+id/ability_name"
        android:text="Description"
        android:textColor="@color/colorText"
        android:textSize="15sp" />
</RelativeLayout>