<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/hero_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/genji_icon"/>
    <View
        android:id="@+id/first_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/hero_portrait"
        android:background="#FF909090" />

    <TextView
        android:id="@+id/hero_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_divider"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:text=""
        android:textColor="@color/colorText"/>
    <TextView
        android:id="@+id/hero_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/hero_name"
        android:layout_below="@+id/hero_name"
        android:padding="3dp"
        android:text=""
        android:textColor="@color/colorText"/>
    <TextView
        android:id="@+id/hero_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hero_age"
        android:layout_toRightOf="@+id/hero_age"
        android:padding="3dp"
        android:text=""
        android:textColor="@color/colorText"/>
    <TextView
        android:id="@+id/hero_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hero_age"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:text=""
        android:textColor="@color/colorText"/>
    <View
        android:id="@+id/second_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/hero_difficulty"
        android:background="#FF909090" />
    <LinearLayout
        android:id="@+id/hero_hp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_divider"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hero_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/colorText"/>
        <TextView
            android:id="@+id/hero_armor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/colorText"/>
        <TextView
            android:id="@+id/hero_shield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/colorText"/>
        <TextView
            android:id="@+id/hero_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/colorText"/>
    </LinearLayout>
    <View
        android:id="@+id/third_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/hero_hp"
        android:background="#FF909090" />
    <ListView
        android:id="@+id/hero_ability_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/third_divider"/>
</RelativeLayout>